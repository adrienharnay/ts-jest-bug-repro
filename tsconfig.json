{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
